{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "definitions"
  },
  "filesGlob": [
    "src/**/*.ts",
    "test/**/*/ts",
    "node_modules/groupby-api/**/*.d.ts",
    "!dist",
    "!node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "files": [
    "src/index.ts",
    "src/searchandiser.ts",
    "src/tags/index.ts",
    "src/utils.ts",
    "node_modules/groupby-api/dist/commonjs/groupby-api.d.ts"
  ]
}
