{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "definitions"
  },
  "filesGlob": [
    "src/**/*.ts",
    "typings/index.d.ts",
    "test/**/*.ts",
    "!node_modules/**/*.d.ts",
    "node_modules/groupby-api/**/groupby-api.d.ts"
  ],
  "files": [
    "src/all.d.ts",
    "src/core.ts",
    "src/searchandiser-ui.ts",
    "typings/index.d.ts",
    "node_modules/groupby-api/build/groupby-api.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
